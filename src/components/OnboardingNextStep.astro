---
import LinkInternal from "@components/LinkInternal.astro";
import { Icon } from "astro-icon/components";

interface Props {
  href: string;
}
---

<LinkInternal
  class="ml-auto flex w-fit items-center gap-2 border-none bg-lime-100 decoration-lime-400 decoration-2 underline-offset-2 hover:underline dark:bg-lime-950 dark:decoration-lime-700"
  href={Astro.props.href}
>
  Next step
  <Icon name="arrow-right" class="h-4 w-4" />
</LinkInternal>
