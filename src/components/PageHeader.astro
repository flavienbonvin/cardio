---
import LinkInternal from "@components/LinkInternal.astro";

interface Props {
  title: string;
  cta?: string;
  ctaLink?: string;
  description?: string;
}
---

<section
  class="flex flex-col items-start justify-between gap-3 sm:flex-row sm:items-center sm:gap-0"
>
  <div class="sm:flex-auto">
    <h1 class="text-2xl font-semibold leading-6">{Astro.props.title}</h1>
    {Astro.props.description && <p class="mt-2">{Astro.props.description}</p>}
  </div>
  {
    Astro.props.cta && Astro.props.ctaLink && (
      <LinkInternal href={Astro.props.ctaLink}>{Astro.props.cta}</LinkInternal>
    )
  }
</section>
